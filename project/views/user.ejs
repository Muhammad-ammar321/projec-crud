<%- include('partials/head')%>
<link rel="stylesheet" href="/styles/user.css">

<body class="box">
       

    <main >
        
        <h1>Student Profile</h1>
      
      <figure>
          <h2>Student Picture</h2>
          <img class="stud-pic" src="https://img.icons8.com/color/27/test-account.png" alt="student-image">
      </figure>
        
      <section class="personal-info">
        <h2>Personal Information</h2>
        <div class="info-grid">
                                                              
          <div><strong>Full Name:</strong><span id="full-name"><%= student_name %></span></div>
          <div><strong>Father's Name:</strong><span id="father-name"> <%= father_name %></span></div>
          <div><strong>Roll Number:</strong><span id="roll-number"><%= roll_number %></span></div>
          <div><strong>Date of Birth:</strong><span id="D.O.B"><%= D_O_B %></span></div>
          <div><strong>CNIC / B-Form:</strong><span id="cnic"><%= cnic %></span></div>
          <div><strong>Email Address:</strong><span id="email"><%= email %></span></div>
          <div><strong>Email Address:</strong><span id="course"><%= course %></span></div>
          <div style="max-width: 580px;"><strong>Phone Number:</strong><span id="phone"><%= phone_number %></span></div>
                                                               
        </div>
      </section>

        <h2>Student Data</h2>
      <figure>
              <h3>Matric marksheet</h3>
          <img src="" alt="matric-marksheet">
      </figure>
        
      <figure>
          <h3>Intermediate marksheet</h3>
          <img src="" alt="intermediate-marksheet">
        </figure>
      
      </article>

      <!-- <button src="./edit.html">edit</button>   -->
      <a href="edit" class="edit">Edit</a>
    </main>
    <%- include('partials/footer')%>
   